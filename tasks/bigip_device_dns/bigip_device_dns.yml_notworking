- name: Set the DNS settings on the BIG-IP
  bigip_device_dns:
      user: "{{ username }}"
      password: "{{ password }}"
      server: "{{ inventory_hostname }}"
      name_servers:
          - "{{ item.item }}"
      with_items:
          - "{{ dns_servers }}"
      search:
          - localdomain
          - lab.local
      validate_certs: "no"
  delegate_to: localhost
